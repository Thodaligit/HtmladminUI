@model IEnumerable<AdminUI.AspNetUser>


@{
    var serializer = new System.Web.Script.Serialization.JavaScriptSerializer();
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<br />

<style type="text/css">

    ltgray {
        background-color: lightgray !important;
    }

    thead th {
        max-width: 70px;
        text-overflow: ellipsis;
        white-space: nowrap;
        overflow: hidden;
    }

        thead th:hover {
            overflow: visible;
            white-space: normal;
            height: auto;
        }

    #aspNetUserTable tbody td {
        max-width: 120px;
        text-overflow: ellipsis;
        white-space: nowrap;
        overflow: hidden;
    }

    #aspNetUserTable tbody td:hover {
        overflow: visible;
        white-space: normal;
        height: auto;
    }
</style>



<table id="aspNetUserTable" class="table table-bordered" style="width:100%">

    <thead style="background-color:lightgray">
        <tr>
            <th>
                Id
            </th>
            <th>
                UserName
            </th>
            <th>
                Email
            </th>
            <th>
                Mobile
            </th>
        </tr>
    </thead>
    <tfoot>
        <tr>
            <th>
                Id
            </th>
            <th>
                UserName
            </th>
            <th>
                Email
            </th>
            <th>
                Mobile
            </th>
        </tr>
    </tfoot>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
            </tr>
        }
    </tbody>



</table>

<style type="text/css">
    tfoot {
        display: table-row-group;
    }
</style>
<script type="text/javascript">


    $(document).ready(function () {


        $('#aspNetUserTable tfoot tr').clone(true).appendTo('#aspNetUserTable tfoot');
        $('#aspNetUserTable tfoot tr:eq(1) th').each(function (i) {


            $(this).insertAfter($(this).siblings('#aspNetUserTable thead'));

            $(this).html('<input type="text" size="5" placeholder="search"/>');

            $('input', this).on('keyup change', function () {
                if (table.column(i).search() !== this.value) {
                    table
                        .column(i)
                        .search(this.value)
                        .draw();
                }
            });
            $('input').each(function () {
                $(this).width($(this).parent().width() - 26);
            });



        });


        $("#aspNetUserTable tfoot tr:first-child").remove();

        var table = $('#aspNetUserTable').DataTable({
            dom: 'Blfrtip'
            , order: [[1, 'desc']]
            , buttons: [
                {
                    extend: 'excel',
                    exportOptions: {
                        format: {
                            title: function (data, column) {
                                return null;
                            }
                        },
                        columns: [0, 1,2,3]
                    }, footer: true

                }
                //,
                //{
                //    extend: 'csv',
                //    exportOptions: {
                //        columns: [0, 1]
                //    }, footer: true
                //}
                //,
                //{
                //    extend: 'csv',
                //    title: 'csv',
                //    exportOptions: {
                //        columns: ':visible'
                //    }
                //},
                //{
                //    extend: 'pdf',
                //    title: 'pdf',
                //    exportOptions: {
                //        columns: ':visible'
                //    }
                //}
                //,
                //{
                //    extend: 'print',
                //    exportOptions: {
                //        columns: [0, 1]
                //    }, footer: true
                //}
                ,
                {
                    extend: 'colvis',
                    exportOptions: {
                        columns: [0, 1,2,3]
                    }, footer: true
                }
            ]
            , columnDefs: [{
                /* targets: 1,*/
                visible: false
            }]
            , "lengthMenu": [[10, 25, 50, -1], [10, 25, 50, "All"]]

        });

    });

</script>
