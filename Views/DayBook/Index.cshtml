
@model IEnumerable<AdminUI.Models.DayBookBL>

@{
    var serializer = new System.Web.Script.Serialization.JavaScriptSerializer();
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<br />

@using (Html.BeginForm("UploadAsync", "DayBooks", FormMethod.Post, new { enctype = "multipart/form-data" }))
{

    <table>
        <tr>
            <td>File:</td>
            <td>
                <input type="file" name="UploadedFile" />
            </td>
        </tr>
        <tr>
            <td colspan="2">
                <input type="submit" name="Submit" value="Submit" />
            </td>
        </tr>
    </table>
}

<p>
    @Html.ActionLink("Create New", "Create")
</p>


<style type="text/css">

    ltgray {
        background-color: lightgray !important;
    }

    thead th {
        max-width: 70px;
        text-overflow: ellipsis;
        white-space: nowrap;
        overflow: hidden;
    }

        thead th:hover {
            overflow: visible;
            white-space: normal;
            height: auto;
        }

    #daybookTable tbody td {
        max-width: 120px;
        text-overflow: ellipsis;
        white-space: nowrap;
        overflow: hidden;
    }

        #daybookTable tbody td:hover {
            overflow: visible;
            white-space: normal;
            height: auto;
        }
</style>

<table id="daybookTable" class="table table-bordered" style="width:100%">

    <thead style="background-color:lightgray">
        <tr>
            <th>
                AccountNo
            </th>
            <th>
                Date
            </th>
            <th>
                AccountName
            </th>
            <th>
                AccountDescription
            </th>
            <th>
                AccountAmount
            </th>
            <th>
                Action
            </th>
        </tr>
    </thead>
    <tfoot>
        <tr>
            <th>
                AccountNo
            </th>
            <th>
                Date
            </th>
            <th>
                AccountName
            </th>
            <th>
                AccountDescription
            </th>
            <th>
                AccountAmount
            </th>
            <th>
                Action
            </th>
        </tr>
    </tfoot>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.AccountNo)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.AccountName)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.AccountDescription)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.AccountAmount)
                </td>

                <td>
                    @Html.ActionLink("Edit", "Edit", new { AccountNo = item.AccountNo }) |
                    @Html.ActionLink("Details", "Details", new { AccountNo = item.AccountNo }) |
                    @Html.ActionLink("Delete", "Delete", new { AccountNo = item.AccountNo })
                </td>
            </tr>
        }
    </tbody>

</table>

<style type="text/css">
    tfoot {
        display: table-row-group;
    }
</style>
<script type="text/javascript">


    $(document).ready(function () {


        $('#daybookTable tfoot tr').clone(true).appendTo('#daybookTable tfoot');
        $('#daybookTable tfoot tr:eq(1) th').each(function (i) {


            $(this).insertAfter($(this).siblings('#daybookTable thead'));

            $(this).html('<input type="text" size="5" placeholder="search"/>');

            $('input', this).on('keyup change', function () {
                if (table.column(i).search() !== this.value) {
                    table
                        .column(i)
                        .search(this.value)
                        .draw();
                }
            });
            $('input').each(function () {
                $(this).width($(this).parent().width() - 26);
            });

        });


        $("#daybookTable tfoot tr:first-child").remove();

        var table = $('#daybookTable').DataTable({
            dom: 'Blfrtip'
            , order: [[1, 'desc']]
            , buttons: [
                {
                    extend: 'excel',
                    exportOptions: {
                        format: {
                            title: function (data, column) {
                                return null;
                            }
                        },
                        columns: [0, 1, 2]
                    }, footer: true

                }
                //,
                //{
                //    extend: 'csv',
                //    exportOptions: {
                //        columns: [0, 1]
                //    }, footer: true
                //}
                //,
                //{
                //    extend: 'csv',
                //    title: 'csv',
                //    exportOptions: {
                //        columns: ':visible'
                //    }
                //},
                //{
                //    extend: 'pdf',
                //    title: 'pdf',
                //    exportOptions: {
                //        columns: ':visible'
                //    }
                //}
                //,
                //{
                //    extend: 'print',
                //    exportOptions: {
                //        columns: [0, 1]
                //    }, footer: true
                //}
                ,
                {
                    extend: 'colvis',
                    exportOptions: {
                        columns: [0, 1, 2]
                    }, footer: true
                }
            ]
            , columnDefs: [

                { targets: [0, 1, 2, 3, 4], visible: true },
                { targets: '_all', visible: false }
            ]
            , "lengthMenu": [[10, 25, 50, -1], [10, 25, 50, "All"]]

        });

    });

</script>


